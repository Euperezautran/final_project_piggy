
<div class="container">
<h1>Expenses</h1>

    <%= simple_form_for  @expense do |f| %>
      <%= f.input :category, collection: Expense::CATEGORY %>
      <%= f.input :amount,  :label => "Ingresa tus gastos:",placeholder:"Ingresa tus gastos", class: "exs" %>
      <%= f.input :description,  :label => "Descripcion de los gastos:", placeholder:"Descripcion de los gastos", class: "exs" %>
      <%= f.submit "Cargar", class:"btn btn-flat mr-3" %> <%= f.submit "Agregar gastos", name:"test", class:"btn btn-gradient" %>
    <% end %>

</div>
