
<div class="container py-5 row">
  <div class="col-sm-12 col-md-8 offset-md-3" >
    <div class="cards">
      <% if @expenses.any? %>
        <% @expenses.each do |expense| %>
          <div class="my-3">
            <div class="card-product">
              <img src= />
                  <div class="card-product-infos">
                    <h2><%= number_to_currency(expense.amount) %></h2>
                    <p><%= expense.description.capitalize %> <strong><%= expense.created_at.strftime("%d-%m-%Y %H:%M")%></strong>
                    </p>
                  </div>
            </div>
          </div>
        <% end %>
      <% else %>
        <div>Aun no tienes gastos</div>
      <% end %>
    </div>
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
</div>



