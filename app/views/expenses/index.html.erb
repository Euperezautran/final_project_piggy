<div class="container-fluid py-5">
    <div class="col-md-12">
      <div class="card">
        <div class="card-body">
          <h3 class="card-title misGastos">Mis Gastos</h3>
          <br>
           <ul lass="list-group ">
            <% if @expenses.any? %>
              <% @expenses.each do |expense| %>
                <li class="list-group-item d-flex justify-content-between"><%= expense.category %> $<%= expense.amount %> <br>
                  <%= expense.description %>
                  <button type="button" class="btn btnAnimation btn-sm" data-toggle="modal" data-target="#expenseModal_<%= expense.id %>">
                    Editar
                  </button>
                </li>
                  <%= render "expense_modal_edit", expense: expense %>
              <% end %>
            <% else %>
              <li>Aun no tienes gastos</li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
</div>


